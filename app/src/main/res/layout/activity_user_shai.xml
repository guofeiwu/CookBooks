<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <com.wgf.cookbooks.view.CustomToolbar
        android:id="@+id/id_ct_user_album_back"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:toolbarTitle="我的相册"
        />
    <FrameLayout
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/id_fl_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/id_rv_shais"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:visibility="gone"
            android:background="@color/white_background"
            android:id="@+id/id_ll_comment"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="46dp">
            <EditText
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:id="@+id/id_et_comment_content"
                android:textSize="@dimen/text_small_content_size"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:hint="请输入你要评论的内容"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/id_tv_send_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:textSize="@dimen/text_content_size"
                android:layout_marginLeft="15dp"
                />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>