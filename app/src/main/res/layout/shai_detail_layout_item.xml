<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <com.wgf.cookbooks.view.CircleImageView
          android:id="@+id/id_civ_icon_item"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:layout_marginTop="10dp"
          android:layout_marginLeft="10dp"
          android:src="@drawable/rank"
          />
      <TextView
          android:id="@+id/id_tv_user_name_item"
          android:layout_gravity="center_vertical"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="子非鱼"
          android:layout_marginLeft="8dp"
          android:textSize="@dimen/text_small_content_size"
          />
  </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_content_size"
            android:text="美食真的好棒"
            android:layout_marginLeft="50dp"
            android:id="@+id/id_tv_desc_item"
            />
        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/id_iv_shai_item"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/rank"
            />
        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/id_tv_shai_time_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-10-03 09:20:30"
                />
            <LinearLayout
                android:id="@+id/id_ll_like_item"
                android:layout_gravity="right"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/id_iv_like_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/not_like_32"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/id_tv_like_count_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赞"
                    android:layout_marginLeft="3dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/id_ll_comment_item"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/id_iv_comment_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/comment_32"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/id_tv_comment_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>