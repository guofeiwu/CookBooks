<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="150dp"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/id_iv_menu_icon"
            android:src="@drawable/food1"
            android:layout_width="150dp"
            android:layout_height="100dp"/>
    </RelativeLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginLeft="3dp"
        android:orientation="vertical"
        android:layout_toRightOf="@id/id_iv_menu_icon"
        android:layout_width="150dp"
        android:layout_height="100dp">
        <TextView
            android:id="@+id/id_tv_menu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="菜谱名字"
            android:textSize="@dimen/text_content_size"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/id_tv_menu_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="很多东西的做法就是这么简单很多东西的做法就是这么简单"
            android:maxLines="2"
            android:textSize="@dimen/text_small_content_size"
            />
    </LinearLayout>
</LinearLayout>