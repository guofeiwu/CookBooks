<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_info_layout_height"
        android:background="?attr/selectableItemBackground"
        >
        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题名"
            android:textSize="@dimen/text_content_size"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_margin="@dimen/ppe_margin"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/content_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_narrow"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/ppe_margin"
            android:text="子非鱼"/>

        <ImageView
            android:id="@+id/iv_narrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ppe"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/ppe_margin"
            />
        <View
            android:layout_alignBottom="@+id/iv_narrow"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/view_gray" />
    </RelativeLayout>

</LinearLayout>